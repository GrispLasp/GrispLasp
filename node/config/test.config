%% -*- erlang -*-
[{node, [
{primary_workers, [
  % pinger_worker,
    node_utils_server,
    node_storage_server]},
    {distributed_workers, [
        generic_tasks_server,
        generic_tasks_worker,
        sensor_server_worker
        % node_stream_worker
    ]},
    {node_sensor_server_worker_measurements, [temp]},
    {timed_apps, [lasp]},
    {generic_tasks_sets_names, [tasks]},
    {data_crdts_names, [{temp, dont_flush_crdt}]},
    {generic_tasks_restart_interval, 5000},
    {als_stream_interval, 20000},
    {temp_stream_interval, 3000},
    {webserver_host, 'nodews@Laymer-3'},
    {console_output, false}
]},

{lasp, [{membership, true},
        {storage_backend, lasp_ets_storage_backend},
        {mode, state_based},
        % see https://github.com/lasp-lang/lasp/commit/a9422207e554e47495c7c488450a238274844eb9
        {propagate_on_update, true},
        {plumtree_peer_refresh_interval, 2000},
        {state_sync_interval, 1000},
        {delta_interval, 100}]},

{lager, [
  {handlers, [
    {lager_console_backend, [{level, info}]}
  ]}
]},

% {logger, [
%   {level, error}
% ]},
% {os_mon, [
%   {start_os_sup, true},
%   {start_cpu_sup, true},
%   {start_disk_sup, false}
% ]},

{kernel, [
    {logger_level, error},
    {logger, [{handler,
      default,
      logger_std_h,
      #{level => error,
        formatter => {logger_formatter, #{single_line => true}}}
   }]}
]},

{plumtree, [{broadcast_exchange_timer, 100},
           {broadcast_mods, [lasp_plumtree_backend]}]},

{partisan, [{partisan_peer_service_manager,
            partisan_hyparview_peer_service_manager}]},

{grisp, [{drivers, [
                {spi, grisp_spi_drv},
                {gpio, grisp_gpio_drv},
                {i2c, grisp_i2c_drv}
            ]},
        {devices, [
            % {gpio1, pmod_amp2},
            % {uart, pmod_maxsonar},
            % {spi1, pmod_gyro},
            % {spi1, pmod_nav},
            % {spi2, pmod_als}
        ]}
    ]}
].
